{
  "family": "QuiosqueFood3000Order-production-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::378758073271:role/LabRole",
  "taskRoleArn": "arn:aws:iam::378758073271:role/LabRole",
  "containerDefinitions": [
    {
      "name": "order-api",
      "image": "378758073271.dkr.ecr.us-east-1.amazonaws.com/quiosquefood3000-order:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ASPNETCORE_ENVIRONMENT",
          "value": "Production"
        },
        {
          "name": "ASPNETCORE_URLS",
          "value": "http://+:8080"
        },
        {
          "name": "DATABASE_HOST",
          "value": "quiosquefood3000order-production-db.xxxxxxxxxx.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DATABASE_PORT",
          "value": "5432"
        },
        {
          "name": "DATABASE_NAME",
          "value": "QuiosqueFood3000OrderDB"
        },
        {
          "name": "DATABASE_USER",
          "value": "postgres"
        },
        {
          "name": "DATABASE_PASSWORD",
          "value": "SUA_SENHA_AQUI"
        },
        {
          "name": "ConnectionStrings__DefaultConnection",
          "value": "Host=quiosquefood3000order-production-db.xxxxxxxxxx.us-east-1.rds.amazonaws.com;Port=5432;Database=QuiosqueFood3000OrderDB;Username=postgres;Password=SUA_SENHA_AQUI;SSL Mode=Prefer;Trust Server Certificate=true;"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/QuiosqueFood3000Order-production",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}